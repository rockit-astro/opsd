{
  "daemon": "clasp_operations",
  "log_name": "opsd@clasp",
  "control_machines": ["CLASPTCS"],
  "pipeline_machines": ["CLASPDAS"],
  "actions_module": "warwick.observatory.operations.actions.clasp",
  "loop_delay": 10,
  "site_latitude": "28.76022 N",
  "site_longitude": "17.87928 W",
  "site_elevation": 2350,
  "dome": {
    "module": "warwick.observatory.operations.dome.astrohaven",
    "daemon": "clasp_dome",
    "movement_timeout": 120,
    "heartbeat_timeout": 119
  },
  "environment_daemon": "observatory_environment",
  "environment_conditions": [
    {
      "label": "Wind",
      "sensors": [
        {
          "label": "W1m",
          "sensor": "w1m_vaisala",
          "parameter": "wind_speed"
        },
        {
          "label": "GOTO",
          "sensor": "goto_vaisala",
          "parameter": "wind_speed"
        }
      ]
    },
    {
      "label": "Median Wind",
      "sensors": [
        {
          "label": "W1m",
          "sensor": "w1m_vaisala",
          "parameter": "median_wind_speed"
        },
        {
          "label": "GOTO",
          "sensor": "goto_vaisala",
          "parameter": "median_wind_speed"
        }
      ]
    },
    {
      "label": "Temperature",
      "sensors": [
        {
          "label": "W1m",
          "sensor": "w1m_vaisala",
          "parameter": "temperature"
        },
        {
          "label": "GOTO",
          "sensor": "goto_vaisala",
          "parameter": "temperature"
        }
      ]
    },
    {
      "label": "Humidity",
      "sensors": [
        {
          "label": "W1m",
          "sensor": "w1m_vaisala",
          "parameter": "relative_humidity"
        },
        {
          "label": "GOTO",
          "sensor": "goto_vaisala",
          "parameter": "relative_humidity"
        }
      ]
    },
    {
      "label": "Int. Humidity",
      "sensors": [
        {
          "label": "CLASP",
          "sensor": "clasp_domealert",
          "parameter": "internal_humidity"
        }
      ]
    },
    {
      "label": "Dew Point",
      "sensors": [
        {
          "label": "W1m",
          "sensor": "w1m_vaisala",
          "parameter": "dew_point_delta"
        },
        {
          "label": "GOTO",
          "sensor": "goto_vaisala",
          "parameter": "dew_point_delta"
        }
      ]
    },
    {
      "label": "Rain",
      "sensors": [
        {
          "label": "W1m",
          "sensor": "rain",
          "parameter": "unsafe_boards"
        }
      ]
    },
    {
      "label": "Network",
      "sensors": [
        {
          "label": "Google",
          "sensor": "netping",
          "parameter": "google"
        },
        {
          "label": "NGTSHead",
          "sensor": "netping",
          "parameter": "ngtshead"
        }
      ]
    },
    {
      "label": "Disk Space",
      "sensors": [
        {
          "label": "DAS",
          "sensor": "clasp_diskspace",
          "parameter": "data_fs_available_bytes"
        }
      ]
    },
    {
      "label": "UPS Status",
      "sensors": [
        {
          "label": "UPS1",
          "sensor": "w1m_power",
          "parameter": "ups1_status"
        },
        {
          "label": "UPS2",
          "sensor": "w1m_power",
          "parameter": "ups2_status"
        }
      ]
    },
    {
      "label": "UPS Battery",
      "sensors": [
        {
          "label": "UPS1",
          "sensor": "clasp_power",
          "parameter": "ups1_battery_remaining"
        },
        {
          "label": "UPS2",
          "sensor": "clasp_power",
          "parameter": "ups2_battery_remaining"
        }
      ]
    },
    {
      "label": "Sun",
      "sensors": [
        {
          "label": "Altitude",
          "sensor": "ephem",
          "parameter": "sun_alt"
        }
      ]
    }
  ]
}
