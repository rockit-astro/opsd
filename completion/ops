_ops()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="status json dome dehumidifier observing autoflat acquire schedule validate"

    case "${prev}" in
        dome|dehumidifier)
            opts="auto manual"
            ;;
        observing)
            opts="enabled disabled"
            ;;
        schedule|validate)
            # Fall back to readline completion for files (from the -o default)
            compopt -o default
            COMPREPLY=()
            return 0
            ;;
        *)
            ;;
    esac

    COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
    return 0
}

complete -F _ops ops
