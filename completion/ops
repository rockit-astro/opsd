_ops()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="status json dome observing autoflat"

    case "${prev}" in
        dome)
            opts="auto manual"
            ;;
        observing)
            opts="enabled disabled"
            ;;
        *)
            ;;
    esac

    COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
    return 0
}

complete -F _ops ops
