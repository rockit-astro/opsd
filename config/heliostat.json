{
  "daemon": "warwick_heliostat_operations",
  "log_name": "opsd@warwick_heliostat",
  "control_machines": ["WarwickHeliostatDome"],
  "pipeline_machines": ["WarwickHeliostatDome"],
  "actions_module": "rockit.operations.actions.heliostat",
  "scripts_module": "rockit.operations.scripts.heliostat",
  "loop_delay": 10,
  "site_latitude": 52.376861,
  "site_longitude": -1.583861,
  "site_elevation": 94,
  "sun_altitude_limit": 90,
  "dome": {
    "module": "rockit.operations.dome.pulsar",
    "daemon": "warwick_heliostat_dome",
    "movement_timeout": 180,
    "heartbeat_timeout": 200
  },
  "environment_daemon": "warwick_environment",
  "environment_conditions": [
    {
      "label": "Wind",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "vaisala",
          "parameter": "wind_speed"
        }
      ]
    },
    {
      "label": "Median Wind",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "vaisala",
          "parameter": "median_wind_speed"
        }
      ]
    },
    {
      "label": "Temperature",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "vaisala",
          "parameter": "temperature"
        }
      ]
    },
    {
      "label": "Humidity",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "vaisala",
          "parameter": "relative_humidity"
        }
      ]
    },
    {
      "label": "Int. Temperature",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "heliostat_internal",
          "parameter": "temperature"
        }
      ]
    },
    {
      "label": "Int. Humidity",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "heliostat_internal",
          "parameter": "relative_humidity"
        }
      ]
    },
    {
      "label": "Int. Dew Point",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "heliostat_internal",
          "parameter": "dew_point_delta"
        }
      ]
    },
    {
      "label": "Rain",
      "sensors": [
        {
          "label": "Warwick",
          "sensor": "vaisala",
          "parameter": "rg11_unsafe"
        }
      ]
    }
  ]
}

