{
  "daemon": "portable_operations",
  "log_name": "opsd@portable",
  "control_machines": ["PortableTCS"],
  "pipeline_machines": ["PortableTCS"],
  "actions_module": "rockit.operations.actions.portable",
  "scripts_module": "rockit.operations.scripts.portable",
  "loop_delay": 10,
  "site_latitude": 28.76022,
  "site_longitude": -17.87928,
  "site_elevation": 2350,
  "sun_altitude_limit": 5,
  "environment_daemon": "portable_environment",
  "environment_conditions": [
    {
      "label": "Disk Space",
      "sensors": [
        {
          "label": "PORTABLE",
          "sensor": "portable_diskspace",
          "parameter": "data_fs_available_bytes"
        }
      ]
    }
  ]
}
